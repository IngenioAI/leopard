            },
            {
                "id": "epochs",
                "title": "epochs",
                "type": "number",
                "default": 300
            },
            {
                "id": "shadow_num",
                "title": "shadow num",
                "type": "number",
                "default": 1
            },
            {
                "id": "early_stop",
                "title": "early stop",
                "type": "number",
                "default": 5
            },
            {
                "id": "weight_decay",
